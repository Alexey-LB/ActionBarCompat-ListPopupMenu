<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--http://developer.alexanderklimov.ru/android/theory/shape.php#shape-->
    <item>
        <shape  android:shape="oval"
            android:thickness="1dp">
            <stroke
                android:width="1dp"
                android:color="#000000">
            </stroke>
            <gradient
                android:centerColor="#E0E0E0"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#ffffff"
                android:gradientRadius="40"
                android:startColor="#C0C0C0"
                android:type="radial"/>
        </shape>
    </item>
    <!--android:thickness="1dp"  без этого ЭМУЛЯТОР не показывает фигуру! а на телефон нормально видно все-->


