<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main_min_max"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum = "100"
    android:background="@color/colorTextlight"
    android:visibility="visible"
    android:textColor="@color/colorTextlight"
    android:textSize="@dimen/iten_text_size"
    >
    <!--android:background="@color/colorTextlight"-->
     <!--ОТСТУПЫ - НЕ работает!? почемуто, хотел добапввить разделители-->
    <!--android:divider="@color/colorAccent"-->
    <!--android:dividerPadding="15dp"-->
    <!--android:showDividers="beginning|middle|end">-->
    <!---->

    <!--Также можно указать атрибут android:weightSum. Если атрибуту присвоить значение 100, то -->
    <!--можно указывать вес дочерних элементов в удобном виде, как в процентах. Такой способ широко -->
    <!--используется веб-мастерами при вёрстке.-->

    <!--"Поиск"-->
    <!---->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iten_setting_wight"
        android:layout_marginBottom="@dimen/iten_vertical_gap_wight"
        android:background="@color/colorBackground">

        <TextView
            android:text=""
            android:id="@+id/textViewGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lines="1"
            android:layout_marginLeft="10dp"
            android:gravity="left|bottom"
            android:paddingBottom="5dp" />
    </LinearLayout>

    <!--COLOR-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iten_setting_wight"
        android:layout_marginBottom="@dimen/iten_vertical_gap_wight"
        android:background="@color/colorBackground">

        <TextView
            android:text="Цвет"
            android:id="@+id/textViewLabelColor"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:textColor="@color/colorTextlight"
            android:textSize="@dimen/iten_text_size"/>

        <TextView
              android:id="@+id/textViewColor"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="100"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:lines="1"
            android:textStyle="normal|bold"
            android:gravity="right|center_vertical|end"
            android:textColor="@color/colorText"
            android:textSize="@dimen/iten_text_size"
            />

        <ImageButton
            android:id="@+id/imageButtonColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_weight="0"
            android:textAlignment="gravity"
            android:gravity="right|center_vertical"
            android:background="@color/colorBackground"
            />
        <!--android:paddingRight="10dp"-->
        <!--app:srcCompat="@drawable/ic_chevron_right_black_24dp"-->
    </LinearLayout>
    <!--Imeg-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iten_setting_wight"
        android:layout_marginBottom="@dimen/iten_vertical_gap_wight"
        android:background="@color/colorBackground">

        <TextView
            android:text="Изображение"
            android:id="@+id/textViewLabelImeg"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:textColor="@color/colorTextlight"
            android:textSize="@dimen/iten_text_size"/>
        <!--android:inputType="textAutoComplete"-->
        <TextView
            android:id="@+id/textViewImeg"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="100"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:lines="1"
            android:textStyle="normal|bold"
            android:gravity="right|center_vertical|end"
            android:textColor="@color/colorText"
            android:textSize="@dimen/iten_text_size"
            />
        <!--android:textAlignment="viewEnd"-->

        <ImageButton
            android:id="@+id/imageButtonImeg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_weight="0"
            android:textAlignment="gravity"
            android:background="@color/colorBackground"
            android:gravity="right|center_vertical"
            />
        <!--android:paddingRight="10dp"-->
        <!--app:srcCompat="@drawable/ic_chevron_right_black_24dp"-->
    </LinearLayout>

    <!--АЛЬБОМ-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iten_setting_wight"
        android:layout_marginBottom="@dimen/iten_vertical_gap_wight"
        android:background="@color/colorBackground">

        <TextView
            android:text="Коллекция телефона"
            android:id="@+id/textViewLabelСollection"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:textColor="@color/colorTextlight"
            android:textSize="@dimen/iten_text_size"/>
        <!--android:inputType="textAutoComplete"-->
        <TextView
            android:id="@+id/textViewСollection"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="100"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:lines="1"
            android:textStyle="normal|bold"
            android:gravity="right|center_vertical|end"
            android:textColor="@color/colorText"
            android:textSize="@dimen/iten_text_size"
            />
        <!--android:textAlignment="viewEnd"-->

        <ImageButton
            android:id="@+id/imageButtonСollection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_weight="0"
            android:textAlignment="gravity"
            android:background="@color/colorBackground"
            android:gravity="right|center_vertical"
            />
        <!--android:paddingRight="10dp"-->
        <!--app:srcCompat="@drawable/ic_chevron_right_black_24dp"-->
    </LinearLayout>

    <!--Камера-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iten_setting_wight"
        android:layout_marginBottom="@dimen/iten_vertical_gap_wight"
        android:background="@color/colorBackground">

        <TextView
            android:text="Фото"
            android:id="@+id/textViewLabelPhoto"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:textColor="@color/colorTextlight"
            android:textSize="@dimen/iten_text_size"/>
        <!--android:inputType="textAutoComplete"-->
        <TextView
            android:id="@+id/textViewPhoto"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="100"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:lines="1"
            android:textStyle="normal|bold"
            android:gravity="right|center_vertical|end"
            android:textColor="@color/colorText"
            android:textSize="@dimen/iten_text_size"
            />
        <!--android:textAlignment="viewEnd"-->

        <ImageButton
            android:id="@+id/imageButtonPhoto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_weight="0"
            android:textAlignment="gravity"
            android:background="@color/colorBackground"
            android:gravity="right|center_vertical"
            />
        <!--android:paddingRight="10dp"-->
        <!--app:srcCompat="@drawable/ic_chevron_right_black_24dp"-->
    </LinearLayout>

</LinearLayout>