<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@drawable/house_start2">
    <!--android:background="@color/colorPrimaryDark"-->
    <!--ЗАСТАВКА РЕЛСИБА -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="THERMOMETER RELSIB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:textSize="18sp"
            android:textColor="@color/colorBackground"
            android:textStyle="normal|bold"

            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal" />

        <FrameLayout
            android:id="@+id/frame_button"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0"
            android:background="@drawable/house_button2"
            android:layout_width="170dp"
            android:layout_height="170dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonMain"
                    android:text=""
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/house_button_selector" />
            </FrameLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/house_relsib_logo"
                android:id="@+id/imageView3"
                android:layout_gravity="center_vertical|center" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|start"
                    android:layout_weight="2" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_weight="0"
                    android:background="@drawable/logo_relsib_white"
                    android:layout_height="54dp"
                    android:layout_width="46dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0">

                    <TextView
                        android:text="ООО НПК Рэлсиб"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView11"
                        android:textSize="10sp"
                        android:textColor="@color/colorBackground"
                        android:layout_gravity="left"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="sans-serif"
                        android:layout_height="11dp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="www.relsib.com"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView16"
                        android:layout_weight="0"
                        android:textSize="10sp"
                        android:textColor="@color/colorBackground"
                        android:layout_gravity="left"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:layout_height="11dp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="tech@relsib.com"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView13"
                        android:textSize="10sp"
                        android:textColor="@color/colorBackground"
                        android:layout_gravity="left"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:layout_height="11dp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="v 1.0.0                    2017"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView17"
                        android:layout_weight="0"
                        android:textSize="10sp"
                        android:textColor="@color/colorBackground"
                        android:layout_gravity="left"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:layout_height="11dp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
